@page
@model CecilifierApplication
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@functions
{
}

@{
    ViewData["Title"] = "Cecilifier";
    var fromGist = Model.FromGist;
}
<div xmlns="http://www.w3.org/1999/html">
    
    <div class="form-group" data-tooltip="Type any valid C# code to generate the equivalent Cecil api calls. " data-tooltip-location="right">
        <label class="control-label">Enter your C# code</label>
        <textarea id="_csharpcode"></textarea>
    </div>

    <div align="center">
        <button type="submit" id="sendbutton" class="button" data-tooltip="After entering the code you want to process, press this button. (Ctrl-Shift-C)" data-tooltip-location="top">Cecilify your code!</button>
        <button type="submit" id="downloadProject" class="button" data-tooltip="Use this option if you want to download a .Net Core 3.0 project, ready for you to play with! (Ctrl-Shift-G)" data-tooltip-location="top">Generate Project <i class="fa fa-box"></i></button>
        <button class="button" onclick="copyToClipboard('copyPastHelper');" data-tooltip="Copy cecilified code to clipboard." data-tooltip-location="top"><i class="fa fa-copy"></i></button>
        <label id="postToDiscordLabel" class="toggle" data-tooltip="" data-tooltip-location="top">
            <input id="postToDiscord" type="checkbox" onclick="onSendToDiscordCheckBoxChanged();" />
            <span class="slider"></span>
        </label>
    </div>
        
    <div class="form-group" data-tooltip="After pressing <Cecilify> button, the generate code will be show here." data-tooltip-location="right">
        <label class="control-label">Cecilified Code</label>
        <textarea id="_cecilifiedcode"></textarea>

        <div style="font-family:Lucida Console; font-size: 2">Editor powered by <a href="https://github.com/codemirror/codemirror">CodeMirror</a></div>
    </div>
    <a href="javascript:void(0)" id="dlbtn" style="display: none"><button></button></a>
    <div class="alert info2" id="cecilifier_new_release">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div></div>
    </div>
</div>

<script>
    initializeSite();
    
    let hasError = @((Model.ErrorAccessingGist != null).ToString().ToLower());
    if (hasError) {
        setError("@Model.ErrorAccessingGist");
    }
    else {
        setValueFromGist("@fromGist");
    }
</script>